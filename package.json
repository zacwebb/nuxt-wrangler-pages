{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "dev:https": "nuxt dev --https --ssl-cert cert.pem --ssl-key key.pem",
    "wrangler": "wrangler pages dev -- pnpm dev",
    "wrangler:https": "wrangler pages dev --local-protocol=https -- pnpm dev:https",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "generate-certs": "mkcert -key-file key.pem -cert-file cert.pem localhost"
  },
  "dependencies": {
    "nuxt": "^3.10.3",
    "vue": "^3.4.19",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "wrangler": "^3.29.0"
  }
}
